{
   "type": "mixin",
   "components": {
      "stonehearth:entity_forms": {
         "placeable_on_walls": true,
         "placeable_on_ground": true
      },
      "sensor_list": {
         "sensors": {
            "door_sensor": {
               "type": "sensor",
               "radius": 6
            }
         }
      },
      "stonehearth:door": {
         "sensor": "door_sensor"
      },
      "destination": {
         "region": [
            {
              "min": { "x": -1, "y": 0, "z": -1 },
              "max": { "x": 2, "y": 2, "z": 2 }
            }
         ]
      },
      "region_collision_shape": {
         "region_collision_type": "platform",
         "region": [
            {
               "min": { "x": -1, "y": 0, "z": -1 },
               "max": { "x": 2, "y": 1, "z": 2 }
            }
         ]
      }
   }
}
