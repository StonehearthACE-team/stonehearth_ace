{
   "type": "mixin",
   "components": {
      "stonehearth:entity_forms": {
         "placeable_on_walls": false,
         "placeable_on_ground": true
      },
      "sensor_list": {
         "sensors": {
            "door_sensor": {
               "type": "sensor",
               "radius": 2
            }
         }
      },
      "stonehearth:door": {
         "sensor": "door_sensor"
      },
      "region_collision_shape": {
         "region_collision_type": "platform",
         "region": [
            {
               "min": { "x": -1.5, "y": 0, "z": -2 },
               "max": { "x": 1.5, "y": 1, "z": 2 }
            }
         ]
      }
   },
   "entity_data": {
      "stonehearth:entity_radius": 0.5
   }
}
